                @Html.DisplayFor(modelItem => item.Paciente.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Odontologo.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaEstimada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaRealizacion)
            </td>
