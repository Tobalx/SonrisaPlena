@model IEnumerable<ClinicaDental.Models.Entities.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<link rel="stylesheet" href="~/css/IndexUsuarios.css" />

<!-- Botón de Volver -->
<a asp-controller="Administradores" asp-action="GestionDePersonal" class="btn btn-outline-dark volver-btn">← Volver</a>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="titulo">Usuarios Registrados</h1>
        <a asp-action="Create" class="btn btn-success">+ Crear Nuevo Usuario</a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered shadow-sm rounded">
            <thead class="table-dark text-center">
                <tr>
                    <th>Usuario</th>
                    <th>Contraseña</th>
                    <th>Tipo</th>
                    <th>Nombre Asociado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var tipo = item.Paciente != null ? "Paciente"
                    : item.Odontologo != null ? "Odontólogo"
                    : item.Administrador != null ? "Administrador"
                    : item.Recepcionista != null ? "Recepcionista"
                    : "-";

                    var nombreAsociado = item.Paciente?.Nombre
                    ?? item.Odontologo?.Nombre
                    ?? item.Administrador?.Nombre
                    ?? item.Recepcionista?.Nombre
                    ?? "-";

                    <tr class="align-middle">
                        <td>@item.NombreUsuario</td>
                        <td>@item.Contrasena</td>
                        <td>@tipo</td>
                        <td>@nombreAsociado</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-1">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-1">Detalles</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
