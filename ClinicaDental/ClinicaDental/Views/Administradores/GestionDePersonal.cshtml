@{
    ViewData["Title"] = "Gestión de Personal";
}

<link rel="stylesheet" href="~/css/GestionDePersonal.css" />

<!-- Botón Volver fijo en la esquina superior izquierda -->
@* <a asp-action="Index" class="btn btn-outline-dark volver-btn">← Volver</a> *@
<a class="btn btn-secondary" asp-action="Index">← Volver</a>

<div class="text-center mb-4">
    <h1>Gestión de Personal</h1>
</div>

<div class="row row-cols-1 row-cols-md-2 g-4">
    <div class="col">
        <div class="card h-100 border-info">
            <div class="card-body">
                <h5 class="card-title">Crear Usuario</h5>
                <p class="card-text">Registrar un nuevo usuario general en el sistema.</p>
                <a asp-controller="Usuarios" asp-action="Index" class="btn btn-info">Ir a Crear Usuario</a>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card h-100 border-primary">
            <div class="card-body">
                <h5 class="card-title">Crear Odontólogo</h5>
                <p class="card-text">Registrar un nuevo odontólogo con sus datos profesionales.</p>
                <a asp-controller="Odontologos" asp-action="Create" class="btn btn-primary">Ir a Crear Odontólogo</a>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card h-100 border-success">
            <div class="card-body">
                <h5 class="card-title">Crear Recepcionista</h5>
                <p class="card-text">Agregar un nuevo recepcionista al equipo de la clínica.</p>
                <a asp-controller="Recepcionistas" asp-action="Create" class="btn btn-success">Ir a Crear Recepcionista</a>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card h-100 border-secondary">
            <div class="card-body">
                <h5 class="card-title">Crear Administrador</h5>
                <p class="card-text">Agregar un nuevo administrador con acceso completo al sistema.</p>
                <a asp-controller="Administradores" asp-action="Create" class="btn btn-secondary">Ir a Crear Administrador</a>
            </div>
        </div>
    </div>
</div>
