@model ClinicaSonrrisaPlena.Models.Entities.Tratamiento

@{
    ViewData["Title"] = "Eliminar Tratamiento";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container mt-5">
    <div class="alert alert-warning shadow-sm">
        <h3 class="text-danger">⚠️ ¿Estás seguro de que deseas eliminar este tratamiento?</h3>
        <p class="mb-0">Esta acción no se puede deshacer.</p>
    </div>

    <div class="card border-danger shadow-sm mb-4">
        <div class="card-body">
            <h4 class="text-danger mb-3">🗑️ Tratamiento a eliminar</h4>
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold">Nombre</dt>
                <dd class="col-sm-9">@Model.Nombre</dd>

                <dt class="col-sm-3 fw-bold">Descripción</dt>
                <dd class="col-sm-9">@Model.Descripcion</dd>

                <dt class="col-sm-3 fw-bold">Precio Estimado</dt>
                <dd class="col-sm-9">$@Model.PrecioEstimado.ToString("N0")</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdTratamiento" />
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">← Cancelar</a>
            <button type="submit" class="btn btn-danger">🗑️ Eliminar</button>
        </div>
    </form>
</div>
