@model ClinicaSonrrisaPlena.Models.Entities.Tratamiento

@{
    ViewData["Title"] = "Detalles del Tratamiento";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container mt-5">
    <h2 class="text-info mb-4">🔍 Detalles del Tratamiento</h2>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold">Nombre</dt>
                <dd class="col-sm-9">@Model.Nombre</dd>

                <dt class="col-sm-3 fw-bold">Descripción</dt>
                <dd class="col-sm-9">@Model.Descripcion</dd>

                <dt class="col-sm-3 fw-bold">Precio Estimado</dt>
                <dd class="col-sm-9">$@Model.PrecioEstimado.ToString("N0")</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-outline-secondary">← Volver a la lista</a>
        <a asp-action="Edit" asp-route-id="@Model?.IdTratamiento" class="btn btn-primary">✏️ Editar</a>
    </div>
</div>
