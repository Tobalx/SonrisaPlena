@model IEnumerable<ClinicaSonrrisaPlena.Models.Entities.Tratamiento>

@{
    ViewData["Title"] = "Tratamientos";
}

<!-- Asegúrate de tener Bootstrap cargado -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">🦷 Mis Tratamientos</h2>
        <a asp-action="Create" class="btn btn-success">➕ Crear Tratamiento</a>
    </div>

    <table class="table table-striped table-hover table-bordered shadow-sm rounded">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                <th>@Html.DisplayNameFor(model => model.PrecioEstimado)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nombre</td>
                    <td>@item.Descripcion</td>
                    <td>$@item.PrecioEstimado.ToString("N0")</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.IdTratamiento" class="btn btn-sm btn-outline-primary me-1">✏️ Editar</a>
                        <a asp-action="Details" asp-route-id="@item.IdTratamiento" class="btn btn-sm btn-outline-info me-1">ℹ️ Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.IdTratamiento" class="btn btn-sm btn-outline-danger">🗑️ Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
