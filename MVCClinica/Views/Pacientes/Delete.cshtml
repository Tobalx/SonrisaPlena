@model ClinicaSonrrisaPlena.Models.Entities.Paciente

@{
    ViewData["Title"] = "Eliminar Paciente";
}

<div class="container mt-5">
    <h1 class="text-danger">Eliminar Paciente</h1>
    <h4 class="mb-4">¿Estás seguro de que deseas eliminar este paciente?</h4>

    <div class="card border-danger shadow-sm mb-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">RUT</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.RUT)</dd>

                <dt class="col-sm-3 fw-bold">Nombre</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-3 fw-bold">Email</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3 fw-bold">Teléfono</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefono)</dd>

                <dt class="col-sm-3 fw-bold">Dirección</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Direccion)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex gap-2">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
