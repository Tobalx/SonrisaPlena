@model ClinicaSonrrisaPlena.Models.Entities.Turno

@{
    ViewData["Title"] = "Eliminar Turno";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container mt-5">
    <h1 class="mb-4 text-danger">Eliminar Turno</h1>
    <h4>¿Está seguro que desea eliminar este turno?</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(m => m.FechaHora)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.FechaHora)</dd>

        <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(m => m.Duracion)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.Duracion)</dd>

        <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(m => m.Estado)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.Estado)</dd>

        <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(m => m.Paciente)</dt>
        <dd class="col-sm-9">@Model.Paciente?.Nombre ?? "No asignado"</dd>

        <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(m => m.Odontologo)</dt>
        <dd class="col-sm-9">@Model.Odontologo?.Nombre ?? "No asignado"</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="IdTurno" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Volver a la lista</a>
    </form>
</div>
