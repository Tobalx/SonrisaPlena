@model ClinicaSonrrisaPlena.Models.Entities.Turno

@{
    ViewData["Title"] = "Detalle del Turno";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container mt-5">
    <h1 class="mb-4">Detalle del Turno</h1>
    <hr />

    <dl class="row">
        <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(m => m.FechaHora)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.FechaHora)</dd>

        <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(m => m.Duracion)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.Duracion)</dd>

        <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(m => m.Estado)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.Estado)</dd>

        <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(m => m.Paciente)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.Paciente.RUT)</dd>

        <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(m => m.Odontologo)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.Odontologo.Nombre)</dd>
    </dl>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.IdTurno" class="btn btn-warning me-2">✏️ Editar</a>
        <a asp-action="Index" class="btn btn-secondary">← Volver a la lista</a>
    </div>
</div>
