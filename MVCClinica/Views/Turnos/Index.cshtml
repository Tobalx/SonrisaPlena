@model IEnumerable<ClinicaSonrrisaPlena.Models.Entities.Turno>

@{
    ViewData["Title"] = "Turnos";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Gestión de Turnos</h2>
        <a asp-action="Create" class="btn btn-success">➕ Nuevo Turno</a>
    </div>

    <table class="table table-hover table-bordered shadow-sm rounded">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.FechaHora)</th>
                <th>@Html.DisplayNameFor(model => model.Duracion)</th>
                <th>@Html.DisplayNameFor(model => model.Estado)</th>
                <th>@Html.DisplayNameFor(model => model.Paciente)</th>
                <th>@Html.DisplayNameFor(model => model.Odontologo)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FechaHora.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@item.Duracion</td>
                    <td>
                        <span class="badge @(item.Estado == "Confirmado" ? "bg-success" : item.Estado == "Cancelado" ? "bg-danger" : "bg-secondary")">
                            @item.Estado
                        </span>
                    </td>
                    <td>@item.Paciente?.RUT</td>
                    <td>@item.Odontologo?.Nombre</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.IdTurno" class="btn btn-sm btn-outline-primary me-1">✏️ Editar</a>
                        <a asp-action="Details" asp-route-id="@item.IdTurno" class="btn btn-sm btn-outline-info me-1">ℹ️ Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.IdTurno" class="btn btn-sm btn-outline-danger">🗑️ Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
