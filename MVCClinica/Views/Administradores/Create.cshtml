@model ClinicaSonrrisaPlena.Models.Entities.Administrador

@{
    ViewData["Title"] = "Registrar Administrador";
}

<h1 class="mb-4">Registro de Administradores</h1>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <form asp-action="CreateDesdeAdmin">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Clave" class="form-label"></label>
                <input asp-for="Clave" class="form-control" type="password" />
                <span asp-validation-for="Clave" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="RolDescripcion" class="form-label"></label>
                <input asp-for="RolDescripcion" class="form-control" />
                <span asp-validation-for="RolDescripcion" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success w-100">Registrar Administrador</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
